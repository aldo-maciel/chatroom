{
  "name": "chartroom-server",
  "version": "0.1.0",
  "private": true,
  "author": "Aldo Bernardes Maciel",
  "scripts": {
    "build": "yarn --cwd view install && npm run --prefix view build && tsc && tscpaths -p tsconfig.json -s ./src",
    "dev": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register src/server.ts' -e ts",
    "start:local": "NODE_ENV=production node ./dist/server.js --open",
    "start": "npm run build && npm run start:local",
    "test": "NODE_ENV=test PORT=3052 mocha",
    "coverage": "nyc npm test",
    "rabbitmq": "docker run -d --name rabbitmq -p 5672:5672 -p 15672:15672 --restart=always --hostname rabbitmq-master -v /docker/rabbitmq/data:/var/lib/rabbitmq rabbitmq:3-management"
  },
  "keywords": [
    "mongoose",
    "inmemory",
    "test",
    "mocha",
    "mongodb",
    "nodejs",
    "typescript",
    "chai"
  ],
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.8.0",
    "axios": "^0.21.1",
    "cors": "2.8.5",
    "csv-parser": "^3.0.0",
    "express": "4.17.1",
    "http-status-codes": "1.4.0",
    "lodash": "^4.17.19",
    "log4js": "6.3.0",
    "mongoose": "5.12.13",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.0",
    "@types/chai": "4.2.11",
    "@types/chai-http": "4.2.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.7",
    "@types/lodash": "4.14.157",
    "@types/mocha": "8.2.2",
    "@types/mongodb": "3.5.25",
    "@types/mongoose": "5.7.31",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-typescript": "3.0.0",
    "eslint-plugin-prettier": "3.4.0",
    "mocha": "8.4.0",
    "mongodb-memory-server": "6.6.1",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "ts-mocha": "7.0.0",
    "ts-node": "8.10.2",
    "tscpaths": "0.0.9",
    "typescript": "3.9.6"
  }
}
